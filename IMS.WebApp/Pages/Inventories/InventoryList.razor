
@page "/inventories/"
@inject NavigationManager NavigationManager
<h3>InventoryList</h3>
<br />

<SearchInventoryComponent OnSearchInventory="OnInventorySearch" ></SearchInventoryComponent>

<br/>
<InventoryListComponent SearchTerm="@searchTerm"></InventoryListComponent>
<br/>

<button type="button" class="btn btn-primary" @onclick="AddInventory">AddInventory</button>

@code {
    private string searchTerm=string.Empty;

    private void OnInventorySearch(string seachTerm){

        this.searchTerm = seachTerm;

    }

    private void AddInventory(){

        NavigationManager.NavigateTo("/Addinventory/");

    }
}
